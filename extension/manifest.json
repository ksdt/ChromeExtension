{
  "name": "KSDT Live",
  "version": "1.0",
  "description": "Chrome extension to listen to the KSDT live stream. AKA listen to some groovy tunes, man.",
  "manifest_version": 2,

  "browser_action": {
    "default_icon": "ksdt_button.png",
    "default_popup": "popup.html"
  },

  "background" : {
    "persistent" : true,
    "scripts" : [ "background.js" ]
  },
  "permissions": [
    "activeTab", "https://ksdt.ucsd.edu/stream.mp3"
  ]
}
